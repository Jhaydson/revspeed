                            </tr>
                        </thead>
                        <tbody>
						                            <tr>
							
                                <td>@Html.DisplayNameFor(model => model.Colecoes.Nome)</td>
                                <td>@Html.DisplayFor(model => model.Colecoes.Nome)</td>
								
                            </tr>
							                            <tr>
							
                                <td>@Html.DisplayNameFor(model => model.Cores.Nome)</td>
                                <td>@Html.DisplayFor(model => model.Cores.Nome)</td>
								
                            </tr>
							                            <tr>
							
                                <td>@Html.DisplayNameFor(model => model.Nome)</td>
                                <td>@Html.DisplayFor(model => model.Nome)</td>
								
                            </tr>
							                            <tr>
							
                                <td>@Html.DisplayNameFor(model => model.CodProduto)</td>
