@model IEnumerable<revSpeed.Models.Produto>

@{
    ViewBag.Title = "Produto";
}


<style>
    .bt-gg {
        width: 100%;
    }
</style>


<!--breadcrumbs start-->
<div id="breadcrumbs-wrapper">
    <!-- Search for small screen -->
    <div class="header-search-wrapper grey lighten-2 hide-on-large-only">
        <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Explore Materialize">
    </div>
    <div class="container">
        <div class="row">
            <div class="col s10 m6 l6">
                <h5 class="breadcrumbs-title">@ViewBag.Title</h5>
                <ol class="breadcrumbs">
                    <li><a href="#">Configurações Gerais</a></li>
                    <li class="active">@ViewBag.Title</li>

                </ol>
            </div>

        </div>
    </div>
</div>
<div class="container">
    <div class="section">
        <div id="table-datatables">
            <div class="row">
                <div class="col s12">
<p>
    @Html.ActionLink("Adicionar Novo", "Create", new{}, new{@class="waves-effect waves-light btn-large bt-gg"})
</p>



<table class="reponsive-table display striped highlight" cellpadding="0">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cores.Nome)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.ValorVenda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SugestaoPreco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pontos)
        </th>
        <th>Ação</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodProduto)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Image))
            {
                <img src="@Url.Content(item.Image)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cores.Nome)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.ValorVenda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SugestaoPreco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pontos)
        </td>
        <td>
            <a class="btn-floating #757575 grey darken-1" href="@Url.Action("Edit",  new { id = item.ProdutoId })"><i class="material-icons">mode_edit</i></a> |
            <a class="btn-floating #1976d2 blue darken-2" href="@Url.Action("Details", new { id = item.ProdutoId })"><i class="material-icons">remove_red_eye</i></a> |
            <a class="btn-floating #e53935 red darken-1" href="@Url.Action("Delete",  new { id = item.ProdutoId })"><i class="material-icons">delete</i></a>

        </td>
    </tr>
}

</table>
</div>
</div>
</div>
</div>
</div>
